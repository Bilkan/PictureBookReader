<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.uyghurdev.avaroid.picturebookreader"
    android:versionCode="1308"
    android:versionName="13.8.23" >

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/picture_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.uyghurdev.avaroid.picturebookreader.About"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="net.uyghurdev.avaroid.picturebookreader.Splash"
            android:label="@string/app_name" >
>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.uyghurdev.avaroid.picturebookreader.LocalBook"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
           android:screenOrientation="landscape"
            android:name="net.uyghurdev.avaroid.picturebookreader.ReadBook"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="net.uyghurdev.avaroid.picturebookreader.OpenBook"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="net.uyghurdev.avaroid.picturebookreader.OnlineBooks"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

</manifest>